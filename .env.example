# ====== App ======
APP_NAME=A`I Bot
NODE_ENV=development   # development | test | production
LOG_LEVEL=info         # trace | debug | info | warn | error | fatal

# ====== Safety Switches ======
KILL_SWITCH=false      # true = boot and exit safely
FEATURE_FLAGS=         # e.g. webhook_guard,ai_shadow

# ====== Audit Logs ======
AUDIT_TO_FILE=true
AUDIT_DIR=data/logs    # relative to project root

# ====== Action Pipeline ======
ACTION_CONCURRENCY=4
ACTION_RATE_MAX=20
ACTION_RATE_INTERVAL_MS=1000

# ====== Module Loader ======
# Comma-separated built-in modules to load from src/modules/
MODULES=health
