{
  "name": "ai-bot",
  "version": "1.1.0",
  "private": true,
  "license": "ISC",
  "type": "module",
  "description": "",
  "main": "dist/bootstrap.js",
  "scripts": {
    "start": "node ./dist/bootstrap.js",
    "build": "tsc",
    "dev:watch": "tsc -w & node --watch dist/bootstrap.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "diag:quick": "node ./dist/diagnostics/quick.js",
    "diag:full": "node ./dist/diagnostics/full.js",
    "cmd": "npm run build && node ./dist/index.js",
    "handoff:view": "type .\\\\.handoff\\\\context.json",
    "handoff": "node .\\\\scripts\\\\context-handoff.cjs",
    "cli": "node ./dist/cli.js",
    "smoke": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\\\scripts\\\\smoke.ps1"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "pino": "^9.9.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
